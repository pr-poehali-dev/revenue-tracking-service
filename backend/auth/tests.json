{
  "tests": [
    {
      "name": "Register duplicate email",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "password": "testpassword123",
        "first_name": "Иван",
        "last_name": "Иванов",
        "middle_name": "Иванович",
        "phone": "+79991234567",
        "company_name": "ООО Тестовая"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Email уже зарегистрирован"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with non-existent user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "nonexistent@example.com",
        "password": "password123"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Неверный email или пароль"
      },
      "bodyMatcher": "partial"
    }
  ]
}